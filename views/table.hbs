<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h2>List Of Products </h2>
            <h5>Welcome to my web, Love to see you back! </h5>

        </div>
    </div>
    <!-- /. ROW  -->
    <hr />

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product List
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class ="dataTables_wrapper form-inline" role="grid">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div id="dataTables-example_filter" class="dataTables_filter"></div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead class="thead thead-dark">
                            <tr>
                                <th  scope="col">Style</th>
                                <th  scope="col">Price</th>
                                <th  scope="col">Name</th>
                                <th  scope="col">Brand</th>
                                <th  scope="col">Type</th>
                                <th  scope="col">Color</th>
                                <th  scope="col">Discount</th>
                                <th  scope="col">Detail</th>
                                <th  scope="col">Link Image</th>
                                <th  scope="col">Link Image Detail</th>
                                <th  scope="col">Update</th>
                                <th  scope="col">Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each list}}
                                <tr>
                                    <td class="small" >{{this.productid}}</td>
                                    <td class="small">{{this.price}}</td>
                                    <td class="small">{{this.name}}</td>
                                    <td class="small">{{this.brand}}</td>
                                    <td class="small">{{this.type}}</td>
                                    <td class="small">{{this.color}}</td>
                                    <td class="small">{{this.discount}}</td>
                                    <td class="small">{{this.detail}}</td>
                                    <td class="small">{{this.image}}</td>
                                    <td class="small">{{this.image1}}</td>
                                    <td>
                                        <a class="btn btn-success" href="/{{this._id}}" >
                                            <i class="fa fa-refresh"></i>
                                            Update
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger" href="/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record');">
                                            <i class="fa fa-edit"></i>
                                             Delete</a>
                                    </td>
                                </tr>
                            {{/each}}


                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">
                                    Showing products
                                </div>
                            </div>
                            <nav aria-label="...">
                                <ul class="pagination pagination-lg">
                                    <li class="page-item"><a class="page-link" href="/table?page=1" tabindex="-1">1</a></li>
                                    <li class="page-item"><a class="page-link" href="/table?page=2">2</a></li>
                                    <li class="page-item"><a class="page-link" href="/table?page=3">3</a></li>
                                    <li class="page-item"><a class="page-link" href="/table?page=4">4</a></li>
                                    <li class="page-item"><a class="page-link" href="/table?page=5">5</a></li>
                                    <li class="page-item"><a class="page-link" href="/table?page=6">6</a></li>
                                    <li class="page-item"><a class="page-link" href="/table?page=7">7</a></li>
                                    <li class="page-item"><a class="page-link" href="/table?page=8">8</a></li>
                                    <li class="page-item"><a class="page-link" href="/table?page=9">...</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>

</div>